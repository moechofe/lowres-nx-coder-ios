VER$="0.0"

'TOUCHSCREEN

GLOBAL JIN

FONT 64

ENVELOPE 0,0,10,0,6
ENVELOPE 1,0,10,0,6
ENVELOPE 2,0,7,0,7
ENVELOPE 3,0,7,0,7
LFO 0,5,4,0,0
LFO 1,5,4,0,0
VOLUME 0,15,%10
VOLUME 1,15,%01
VOLUME 2,15,%10
VOLUME 3,15,%01

SPRITE.A 0,(3,0,0,0,1)
SPRITE.A 1,(0,0,0,0,1)
SPRITE.A 2,(0,0,0,0,3)
SPRITE.A 3,(1,0,0,0,0)
SPRITE.A 4,(2,0,0,0,1)

SPRITE 1,72,56,5
SPRITE 2,64,56,1

'ATTR 2
'CELL 0,15,39
'CELL 1,15,40
'CELL 2,15,41
'CELL 3,15,42
'CELL 4,15,43
'CELL 5,15,44

'TEXT 20-LEN(VER$),15,VER$

DO
  SPRITE 3,76,40,7
  WAIT 30
  FOR Y=40 TO 56
    SPRITE 3,76,Y,7
    WAIT 2
  NEXT Y
  FOR I=1 TO 30
    WAIT VBL
    IF PEEK($A000)=1 THEN GOTO LOADING
  NEXT I
LOOP

LOADING:
ON VBL CALL JINGLE
FOR Y=56 TO 49 STEP -1
  SPRITE 0,72,Y,37
  SPRITE 1,,Y,
  WAIT 4
NEXT Y
WAIT 60

POKE $A000,2
DO
  N=N+1
  SPRITE 4,76,80,8+(N MOD 4)*2
  WAIT 10
LOOP

SUB JINGLE
  IF JIN=0 THEN
    PLAY 0,52,0
    PLAY 1,48,0
  ELSE IF JIN=15 THEN
    STOP
    PLAY 2,50,1
    PLAY 3,46,1
  ELSE IF JIN=30 THEN
    ON VBL OFF
  END IF
  JIN=JIN+1
END SUB

